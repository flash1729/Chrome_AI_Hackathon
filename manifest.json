{
  "manifest_version": 3,
  "name": "Smart Context Generator",
  "version": "1.0.0",
  "description": "Intelligently optimize prompts for LLMs by gathering and organizing contextual information across browser tabs",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting",
    "aiProofreaderOriginTrial"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://generativelanguage.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["extension-page/extension-page.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
